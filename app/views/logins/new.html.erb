<% provide(:title, t(".title")) %>
<body class="hold-transition login-page">
  <div class="alert-absolute">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %> alert-dismissible">
        <button type="button" class="close" data-dismiss="alert"
          aria-hidden="true">Ã—</button>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div class="login-box">
    <div class="login-logo">
      <a href="../../index2.html"><b><%= t(".app_name") %></b></a>
    </div>
    <div class="login-box-body">
      <p class="login-box-msg"><%= t(".title_login") %></p>
      <%= form_for(:login, url: login_path) do |f| %>
        <div class="form-group has-feedback">
          <%= f.text_field :user_name, class: "form-control",
            placeholder: "Username/Email" %>
          <span class="glyphicon glyphicon-envelope
            form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class: "form-control",
            placeholder: "Password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <%= f.check_box :remember_me %> <%= t(".remember_me") %>
              </label>
            </div>
          </div>
          <div class="col-xs-4">
            <%= f.submit t(".title"), class: "btn btn-primary btn-block
              btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <script>
    $(function () {
      $("input").iCheck({
        checkboxClass: "icheckbox_square-blue",
        radioClass: "iradio_square-blue",
        increaseArea: "20%"
      });
    });
  </script>
</body>
