<% provide(:title, t(".title")) %>
<%= link_to(t(".create_user"), new_user_path) %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t(".full_name") %></th>
      <th><%= t(".email") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to(user.full_name, user) %></td>
        <td><%= user.email %></td>
        <td><%= link_to(t(".delete"), user, method: :delete,
          data: {confirm: t(".confirm")}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
