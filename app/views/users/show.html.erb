<% provide(:title, t(".title")) %>
<div class="row">
  <div class="col-md-10">
    <%= @user.full_name %>
  </div>
  <div class="col-md-2">
    <%= link_to(t(".logout"), logout_path) %>
    <% if @user.admin? %>
      <%= link_to(t(".admin"), users_path) %>
    <% end %>
  </div>
</div>
<div class="row">
  <% if current_user?(@user) %>
    <%= render "attendance" %>
  <% end %>
</div>
